#Полноценная документация доступна по ссылке https://editorconfig.org/
root = true

#Каждая секция представляет из себя glob выражение, отображающее
#отдельный файл или шаблон файлов, например *.java
[*.java]

#Указание типа отступа space для пробелов, tab для символа табуляции (\t)
indent_style = space

#Шаг отступа, сколько пробелов будет установлено при форматировании
indent_size = 4

#Устанавливать ли пустую строку в конце файла
insert_final_newline = false

#Символ прерывания строки. LF (\n) - line feed: перенос на новую строку.
#CRLF (\r\n) carriage return; line feed - возврат каретки и перенос на новую строку
end_of_line = lf

#Удалять ли символы пробелов, которые образуют новую строку
trim_trailing_whitespace = false